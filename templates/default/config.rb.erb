#
# Chef Server Config File
#
# Dynamically generated by Chef - local modifications will be replaced

# Something in the network does not like IPv6 so we're defaulting to IPv4 whereever we can.
proxyAddress = <%= @proxy_address %>

# Add logging. Useful for debugging, but also quite intrusive. Beware
logLevel = <%= @log_level %>

# Limit to connections to local subnet
allowedClients = <%= @allowed_clients.join(", ") %>

# Allow access to index and servers through web interface. Also quite intrusive.
disableIndexing = false
disableServersList = false

# Contact IPv4 hosts only (and make DNS queries somewhat faster):
dnsQueryIPv6 = no

